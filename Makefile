	bio.o\
	console.o\
	exec.o\
	file.o\
	fs.o\
	ide.o\
	kalloc.o\
	kbd.o\
	log.o\
	main.o\
	mp.o\
	picirq.o\
	pipe.o\
	proc.o\
	spinlock.o\
	string.o\
	swtch.o\
